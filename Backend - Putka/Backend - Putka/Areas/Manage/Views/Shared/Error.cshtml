@{
    ViewBag.Title = "Ooops...";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<main class="pb-md-4 pb-0">
    <section class="section-404 section-lg-space" style="margin: auto auto">
        <div class="container-fluid-lg">
            <div class="row">
                <div class="col-6" style="margin-left: 550px">
                    <div class="image-404">
                        <img src="../assets/images/inner-page/404.png" class="img-fluid blur-up lazyload" alt="">
                    </div>
                    <h3 class="text-content">
                        The page you are looking for could not be found :(
                    </h3>
                </div>

                <div class="col-12" style="margin-top: 25px">
                    <div class="contain-404">
                        <a asp-action="index" asp-controller="dashboard" class="btn btn-md text-white theme-bg-color mt-4 mx-auto w-25">
                            Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

