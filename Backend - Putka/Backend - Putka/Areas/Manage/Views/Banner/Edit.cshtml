@model Banner
<div class="page-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-8 m-auto">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-header-2">
                                    <h5>Banner Information</h5>
                                </div>

                                <form method="post" asp-action="edit" enctype="multipart/form-data" class="theme-form theme-form-2 mega-form">
                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Top Text</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" asp-for="TopText">
                                            <span class="text-danger" asp-validation-for="TopText"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Header One</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" asp-for="HeaderOne">
                                            <span class="text-danger" asp-validation-for="HeaderOne"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Header Two</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" asp-for="HeaderTwo">
                                            <span class="text-danger" asp-validation-for="HeaderTwo"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Sale Text</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" asp-for="SaleText">
                                            <span class="text-danger" asp-validation-for="SaleText"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Description</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" asp-for="Description">
                                            <span class="text-danger" asp-validation-for="Description"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Button Text</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" asp-for="ButtonText">
                                            <span class="text-danger" asp-validation-for="ButtonText"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Button Link</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" asp-for="ButtonLink">
                                            <span class="text-danger" asp-validation-for="ButtonLink"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="col-sm-3 col-form-label form-label-title" asp-for="IsSmall">IsSmall</label>
                                        <div class="col-sm-9">
                                            <label class="switch" asp-for="IsSmall">
                                                <input asp-for="IsSmall"><span class="switch-state"></span>
                                            </label>
                                        </div>
                                        <span class="text-danger" asp-validation-for="IsSmall"></span>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="col-sm-3 col-form-label form-label-title" asp-for="ImageFile">
                                            Category
                                            Image
                                        </label>
                                        <div class="form-group col-sm-9">
                                            <div class="dropzone-wrapper">
                                                <div class="dropzone-desc">
                                                    <i class="ri-upload-2-line"></i>
                                                    <p>Choose an image file or drag it here.</p>
                                                </div>
                                                <input class="dropzone" asp-for="ImageFile">
                                                <span class="text-danger" asp-validation-for="ImageFile"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div asp-validation-summary="ModelOnly"></div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary w-25 mx-auto">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>