@model OrderCreateViewModel
<form id="checkout-form" asp-action="create" method="post">
    <div class="checkbox-form">
        <div class="row">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Member"))
            {
                <div class="col-xxl-6">
                    <div class="form-floating theme-form-floating">
                        <input disabled asp-for="UserName" class="form-control">
                        <label asp-for="UserName">UserName</label>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                </div>

                <div class="col-xxl-6">
                    <div class="form-floating theme-form-floating">
                        <input disabled asp-for="Email" class="form-control">
                        <label asp-for="Email">Email address</label>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
            }
            else
            {
                <div class="col-xxl-6">
                    <div class="form-floating theme-form-floating">
                        <input asp-for="UserName" class="form-control">
                        <label asp-for="UserName">UserName</label>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                </div>

                <div class="col-xxl-6">
                    <div class="form-floating theme-form-floating">
                        <input asp-for="Email" class="form-control">
                        <label asp-for="Email">Email address</label>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
            }
            <div class="col-xxl-6">
                <div class="form-floating theme-form-floating">
                    <input asp-for="Address" class="form-control">
                    <label asp-for="Address">Add Address</label>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>

            <div class="col-xxl-6">
                <div class="form-floating theme-form-floating">
                    <input asp-for="Phone" class="form-control">
                    <label asp-for="Phone">Phone Number</label>
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
            </div>
        </div>
        <div class="col-xxl-12">
            <div class="form-floating theme-form-floating">
                <textarea asp-for="Note"
                          cols="50"
                          rows="100"
                          placeholder="Notes about your order, e.g. special notes for delivery."
                          class="form-control"></textarea>
                <label asp-for="Note">Order Notes</label>
                <span class="text-danger" asp-validation-for="Note"></span>
            </div>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    </div>
</form>