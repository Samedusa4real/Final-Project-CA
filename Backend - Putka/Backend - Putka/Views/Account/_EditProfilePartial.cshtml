@model ProfileEditViewModel
<form asp-action="profile" method="post">
    <div class="modal-body">
        <div class="row g-4">
            <div class="col-xxl-12">
                <div class="form-floating theme-form-floating">
                    <input asp-for="UserName" class="form-control">
                    <label asp-for="UserName">UserName</label>
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>

            <div class="col-xxl-6">
                <div class="form-floating theme-form-floating">
                    <input asp-for="Email" class="form-control">
                    <label asp-for="Email">Email address</label>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="col-xxl-6">
                <div class="form-floating theme-form-floating">
                    <input asp-for="Address" class="form-control">
                    <label asp-for="Address">Add Address</label>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>

            <div class="col-12">
                <div class="form-floating theme-form-floating">
                    <input asp-for="Phone" class="form-control">
                    <label asp-for="Phone">Phone Number</label>
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
            </div>

            <h5 class="modal-title" style="color: red">Password Change</h5>

            <div class="col-xxl-4">
                <div class="form-floating theme-form-floating">
                    <input asp-for="CurrentPassword" id="currentPassword" class="form-control">
                    <label asp-for="CurrentPassword">Current Password</label>
                    <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                </div>
            </div>

            <div class="col-xxl-4">
                <div class="form-floating theme-form-floating">
                    <input asp-for="NewPassword" id="newPassword" class="form-control" disabled>
                    <label asp-for="NewPassword">New Password</label>
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>
            </div>

            <div class="col-xxl-4">
                <div class="form-floating theme-form-floating">
                    <input asp-for="ConfirmNewPassword" id="confirmNewPassword" class="form-control" disabled>
                    <label asp-for="ConfirmNewPassword">Confirm New Password</label>
                    <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
                </div>
            </div>

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn theme-bg-color btn-md fw-bold text-light">
            Save changes
        </button>
    </div>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const currentPasswordInput = document.getElementById("currentPassword");
        const newPasswordInput = document.getElementById("newPassword");
        const confirmNewPasswordInput = document.getElementById("confirmNewPassword");

        currentPasswordInput.addEventListener("input", function () {
            if (this.value.trim() !== "") {
                newPasswordInput.disabled = false;
                confirmNewPasswordInput.disabled = true;
            } else {
                newPasswordInput.disabled = true;
                confirmNewPasswordInput.disabled = true;
            }
        });

        newPasswordInput.addEventListener("input", function () {
            if (this.value.trim() !== "") {
                confirmNewPasswordInput.disabled = false;
            } else {
                confirmNewPasswordInput.disabled = true;
            }
        });
    });
</script>